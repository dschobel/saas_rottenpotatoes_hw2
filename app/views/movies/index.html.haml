-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Title", {:sort=>"title"}, {:id=>"title_header", :class=>(@title_sort && 'hilite')}
      %th Rating
      %th= link_to "Release Date", {:sort=>"release_date"},{:id => "release_data_header", :class=>(@release_sort && 'hilite')}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
